// File: .devcontainer/devcontainer.json
{
  "name": "SermonScribe Codespace",
  "build": {
    "dockerfile": "Dockerfile"
  },
  // Use Node.js v18 image with TypeScript tooling
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    }
  },
  // Expose your dev server port
  "forwardPorts": [3000],
  // Install deps on initial create
  "postCreateCommand": "npm install",
  "remoteUser": "vscode"
}
